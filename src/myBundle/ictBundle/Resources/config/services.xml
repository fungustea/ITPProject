<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="twig.extension.myBundle.demo" class="myBundle\ictBundle\Resources\views\Default\index.html" public="false">
            <tag name="twig.extension" />
            <argument type="service" id="twig.loader" />
        </service>

        <service id="myBundle.demo.listener" class="myBundle\ictBundle\Controller">
            <tag name="kernel.event_listener" event="kernel.controller" method="WelcomeController" />
            <argument type="service" id="twig.extension.myBundle.demo" />
        </service>
    </services>
</container>
